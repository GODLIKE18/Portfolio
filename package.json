{
  "name": "praveen-portfolio",
  "version": "1.0.0",
  "description": "A modern, responsive personal portfolio website",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "dev": "npx live-server --port=8080 --open=/",
    "build": "npm run optimize",
    "optimize": "npm run optimize:images && npm run optimize:css && npm run optimize:js",
    "optimize:images": "echo 'Image optimization - run manually with imagemin-cli'",
    "optimize:css": "cleancss -o dist/css/style.min.css css/style.css css/animations.css css/responsive.css",
    "optimize:js": "uglifyjs js/main.js js/animations.js js/particles.js -o dist/js/main.min.js -c -m",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint 'css/**/*.css'",
    "lint:js": "eslint 'js/**/*.js'",
    "test": "echo 'No tests specified'",
    "deploy": "npm run build && npm run deploy:netlify",
    "deploy:netlify": "netlify deploy --prod --dir=.",
    "deploy:vercel": "vercel --prod",
    "lighthouse": "lighthouse http://localhost:8080 --output=html --output-path=./lighthouse-report.html",
    "serve:dist": "npx serve dist"
  },
  "keywords": [
    "portfolio",
    "developer",
    "frontend",
    "fullstack",
    "responsive",
    "modern",
    "javascript",
    "css3",
    "html5"
  ],
  "author": {
    "name": "Praveen",
    "email": "praveen@example.com",
    "url": "https://yourportfolio.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/portfolio/issues"
  },
  "homepage": "https://yourportfolio.com",
  "devDependencies": {
    "clean-css-cli": "^5.6.0",
    "eslint": "^8.45.0",
    "imagemin-cli": "^7.0.0",
    "lighthouse": "^10.4.0",
    "live-server": "^1.2.2",
    "netlify-cli": "^15.8.0",
    "serve": "^14.2.0",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "uglify-js": "^3.17.4",
    "vercel": "^31.2.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}